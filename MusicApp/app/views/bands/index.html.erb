<h2>All the Bands!</h2>

<form action="<%= bands_url %>">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <ul>
        <% @bands.each do |band| %>
            <li><a href="<%= band_url(band) %>"><%= band.name %></a></li>
        <% end %>
    </ul>

    <a href="<%= new_band_url %>">New Band</a>

</form>